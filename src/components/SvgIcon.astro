---
import type { IconName } from '../types/icon-names';

interface Props {
	name: IconName;
	size?: 's' | 'm' | 'l' | 'full';
	class?: string;
	isNavIcon?: boolean;
}
const { name, size = 's', class: className } = Astro.props;
---

<svg class:list={[`icon icon--${size}`, className]}>
	<use href=`sprite.svg#${name}`></use>
</svg>

<style lang="scss">
	.icon {
		display: flex;
		align-items: center;
		stroke: var(--stroke);
		stroke-width: var(--stroke-width);

		&--full {
			width: 100%;
			height: 100%;
		}

		&--s {
			width: var(--icon-s);
			height: var(--icon-s);
		}

		&--m {
			width: var(--icon-m);
			height: var(--icon-m);
		}

		&--l {
			width: var(--icon-l);
			height: var(--icon-l);
		}
	}
</style>
