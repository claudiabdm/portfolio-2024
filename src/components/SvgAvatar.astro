<script>
	import { throttle, debounce } from '../utils';

	const innerWidth = window.innerWidth;
	const innerHeight = window.innerHeight;
	const svg = document.getElementById('avatar');

	const ids = [
		'eyes',
		'eyebrows',
		'shadow',
		'hair',
		'glasses',
		'mouth',
		'nose',
		'mouth-smile-open',
	] as const;

	type FaceParts = (typeof ids)[number];
	type FaceElements = Record<FaceParts, { elem: SVGElement; rect: DOMRect }>;

	const elements = ids.reduce((acc, id) => {
		const elem = (svg as any).getElementById(id);
		console.log(elem);
		if (elem instanceof SVGElement) {
			acc[id] = {
				elem,
				rect: elem.getBoundingClientRect(),
			};
		}

		return acc;
	}, {} as FaceElements);

	document.addEventListener('pointermove', throttle(animate, 100));
	document.addEventListener('pointerup', animate);

	const resetAnimations = debounce((elems: FaceElements) => {
		ids.forEach((id) => {
			const elem = elems[id].elem;
			const anim = elem.getAnimations().find((a) => a.id === 'follow-mouse');
			anim?.reverse();
			elements['mouth-smile-open'].elem.style.visibility = 'hidden';
		});
	}, 1000);

	function animate(event: MouseEvent) {
		const { clientX, clientY } = event;
		animateFaceElems(clientX, clientY, elements.eyes, 0.05, 0.035);
		animateFaceElems(clientX, clientY, elements.eyebrows, 0.02);
		animateFaceElems(clientX, clientY, elements.nose, 0.02);
		animateFaceElems(clientX, clientY, elements.shadow, -0.025);
		animateFaceElems(clientX, clientY, elements.hair, -0.0025);
		animateFaceElems(clientX, clientY, elements.glasses, 0.01);
		animateFaceElems(clientX, clientY, elements.mouth, 0.01);

		elements['mouth-smile-open'].elem.style.visibility = 'visible';

		resetAnimations(elements);
	}

	function animateFaceElems(
		x: number,
		y: number,
		obj: FaceElements[FaceParts],
		factorX = 1,
		factorY = factorX
	) {
		const percentageX = (x * 100) / innerWidth - 50;
		const percentageY = (y * 100) / innerHeight - 50;

		const offsetX = percentageX * factorX;
		const offsetY = percentageY * factorY;

		let radianDegrees = Math.atan2(offsetX, offsetY);

		obj.elem.animate(
			[
				{
					transform: obj.elem.style.transform,
				},
				{
					transform: `translate(${offsetX}%, ${offsetY}%) rotateX(${radianDegrees}deg)`,
				},
			],
			{
				id: 'follow-mouse',
				duration: 250,
				easing: 'ease-in',
				fill: 'both',
			}
		);
	}
</script>

